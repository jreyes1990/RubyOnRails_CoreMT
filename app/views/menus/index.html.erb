<!-- Inicio menus -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Menú</h6>
  </div>
  <div class="card-body">

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12 text-right">
              <%= link_to new_menu_path, class: "btn btn-success btn-sm" do %>
                <span class="icon text-green-50">
                  <i class="fas fa-plus-circle"></i>
                </span>
                <span class="text">AGREGAR</span>
              <%end%>
              <%= link_to root_path, class: "btn btn-outline-danger btn-sm" do %>
                <span class="icon text-red-50">
                  <i class="fas fa-home"></i>
                </span>
                <span class="text">INICIO</span>
              <%end%>
            </div>

          </div>
          <br>
          <div class="row">
            <div class="col-md-12 table-responsive-sm">
              <table id="datatable_menus" class="table table-hover table-sm table-bordered display" width="100%" cellpadding="0" cellspacing="0">
                <thead class="thead-light">
                  <tr>
                    <th class="text-center"> id </th>
                    <th> Nombre </th>
                    <th> Descripción </th>
                    <th> Icono </th>
                    <th class="text-center"> Estado </th>
                    <th class="text-center"> Opciones</th>

                  </tr>
                </thead>
                <tbody>
                  <% @menus.each do |menu| %>
                    <tr>
                      <td class="text-center"><%= menu.id %></td>
                      <td><%= menu.nombre %></td>
                      <td><%= menu.descripcion %></td>
                      <td class="text-center"><%= menu.icono %></td>
                      <td class="text-center"><%= menu.estado %></td>

                      <td class="text-center">
                        <%= link_to edit_menu_path(menu), class: "btn btn-outline-info btn-sm " do %>
                          <i class="fas fa-edit"></i>
                        <%end%>

                        <%= link_to  inactivar_menu_path(:id => menu.id), class: "btn btn-outline-danger btn-sm btn_inactivar_menu", data: { nombre: "#{menu.nombre}" } do %>
                          <i class="fas fa-trash-alt"></i>
                        <%end%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
