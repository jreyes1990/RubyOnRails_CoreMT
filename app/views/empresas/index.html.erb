<!-- Inicio empresas -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Empresa</h6>
  </div>
  <div class="card-body">

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12 text-right">
              <% if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>
                <%= link_to new_empresa_path, class: "btn btn-success btn-sm" do %>
                  <span class="icon text-50">
                    <i class="fas fa-plus-circle"></i>
                  </span>
                  <span class="text">AGREGAR</span>
                <%end%>
              <%end%>
              <%= link_to root_path, class: "btn btn-outline-danger btn-sm" do %>
                <span class="icon text-red-50">
                  <i class="fas fa-home"></i>
                </span>
                <span class="text">INICIO</span>
              <%end%>
            </div>
          </div>
          <br>

          <div class="row">
            <div class="col-md-12 table-responsive-sm">
              <table id="datatable_empresas" class="table table-hover table-sm table-bordered display" width="100%" cellpadding="0" cellspacing="0">
                <thead class="thead-light">
                  <tr>
                    <th class="text-center"> id </th>
                    <th class="text-center"> Código Empresa </th>
                    <th> Nombre </th>
                    <th> Descripción </th>
                    <th class="text-center"> Estado</th>
                    <th class="text-center"> Opciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% @empresas.each do |empresa| %>
                    <tr>
                      <td class="text-center"> <%= empresa.id %> </td>
                      <td class="text-center"> <%= empresa.codigo_empresa %> </td>
                      <td> <%= empresa.nombre %> </td>
                      <td> <%= empresa.descripcion %> </td>
                      <td class="text-center"> <%= empresa.estado %> </td>

                      <td class="text-center">
                        <% if tiene_permiso("BOTON EDITAR REGISTRO", "VER") %>
                          <%= link_to edit_empresa_path(empresa), class: "btn btn-outline-info btn-sm " do %>
                            <i class="fas fa-edit"></i>
                          <%end%>
                        <% end %>

                        <% if tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>

                          <%= link_to  inactivar_empresa_path(:id => empresa.id), class: "btn btn-outline-danger btn-sm btn_inactivar_empresa", data: { nombre: "#{empresa.nombre}" } do %>
                            <i class="fas fa-trash-alt"></i>
                          <%end%>

                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
